{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "./node_modules/standard/eslintrc.json", // npm i -D standard
    "eslint:recommended",
    "plugin:react/recommended",
    "next",
    "eslint-config-prettier" // npm i -D eslint-config-prettier
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  }
}
